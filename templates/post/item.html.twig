<h3 class="list-group-item-heading">{{ post.title }}</span></h3>
{% if post.user is defined %}
    <p class="text-muted">Author: {{ post.user.fullName }}, created {{ post.createdAt|date('d/m/Y') }}</p>
{% else %}
    <p class="text-muted">Author: {{ post.user_first_name }} {{ post.user_last_name }}, created {{ post.created_at|date('d/m/Y') }}</p>
{% endif %}
<div class="list-group-item-text lead">
    {{ post.description|raw }}
    <div><a href="{{ path('post_view', {id: post.id}) }}"><small>Read more&#8230;</small></a></div>
</div>